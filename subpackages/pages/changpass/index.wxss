.box{
 width: 100%;
 height: 100vh;
 padding-top: 30rpx;
 background-color: white;
}
.item{
 width: 92%;
 margin-left: 50%;
 transform: translate(-50%,0);
  height: 80rpx;
  line-height: 80rpx;
  color: #6A5F41;
  font-size: 35rpx;
}
.item_pass{
 height: 80rpx;
 line-height: 80rpx;
 border-top: 1px solid #DDCEA8;
 border-bottom: 1px solid #DDCEA8;

}
.item_pass input{
 height: 100%;
 font-size: 35rpx;
 padding-left: 30rpx;
}
.bj_btn{
 width: 92%;
 margin-left: 50%;
 transform: translate(-50%,0);
 height: 70rpx;
 line-height: 70rpx;
  border: 1px solid #00B588;
border-radius: 48rpx;
  padding-bottom: 20rpx;
text-align: center;
margin-top: 30rpx;
margin-bottom: 20rpx;
font-size: 36rpx;
font-family: PingFang SC-Medium, PingFang SC;
font-weight: 400;
color: #00B588;
}