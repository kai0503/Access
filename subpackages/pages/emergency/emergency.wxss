.box{
  width: 92%;
  margin-left: 50%;
  transform: translate(-50%,0);
}
.item_one{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 160rpx;
background: linear-gradient(150deg, #FFFCE5 0%, #FFFBEF 97%);
box-shadow: 0rpx 2rpx 0rpx 0rpx #E6E6E6;
border-radius: 20rpx 20rpx 20rpx 20rpx;
opacity: 1;
border: 2rpx solid #FFFFFF;
padding: 0 50rpx;
}
.left_one{
  font-size: 36rpx;
font-family: PingFang SC-Bold, PingFang SC;
font-weight: 400;
color: #3B3B4D;
}
.left_two{
  font-size: 28rpx;
font-family: PingFang SC-Regular, PingFang SC;
font-weight: 400;
color: rgba(0,0,0,0.6);
margin-top: 20rpx;
}
.one_right{
  width: 82rpx;
  height: 82rpx;
}
.one_right image{
  width: 100%;
  height: 100%;
}