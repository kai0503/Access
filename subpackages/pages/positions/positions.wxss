.box{
  width: 100%;
  height: 100vh;
  background: linear-gradient(180deg, #009CFF 0%, #F5F5F5 30%);
  padding-top: 50rpx;
}
.item{
  width: 92%;
  margin-left: 50%;
  transform: translateX(-50%);
  background-color: white;
  border-radius: 24rpx 24rpx 24rpx 24rpx;

}
.item_one{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #EEEEEE;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.one_left{
  font-size: 28rpx;
font-family: PingFang SC-Medium, PingFang SC;
font-weight: 400;
color: #7986A0;
}
.one_left text{
  font-size: 28rpx;
font-family: PingFang SC-Medium, PingFang SC;
font-weight: 400;
color: #FA5151;
margin-right: 5rpx;
}
.one_right{
  position: relative;
  display: flex;
  align-items: center;
}
.one_right picker{
  position: relative;
  left: -5rpx;
}
.one_right image{
  width: 32rpx;
  height: 32rpx;
}
.one_right input{
  text-align: right;
}
.one_right text{
  font-size: 28rpx;
font-family: PingFang SC-Medium, PingFang SC;
font-weight: 400;
color: #3662EC;
}
.btn{
  width: 634rpx;
height: 96rpx;
line-height: 96rpx;
text-align: center;
background: linear-gradient(270deg, #009CFF 0%, #0069FF 100%);
border-radius: 20rpx 20rpx 20rpx 20rpx;
opacity: 1;
margin-top: 46rpx;
margin-left: 50%;
transform: translateX(-50%);
color: white;
}