/* pages/my/index.wxss */
/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
position: relative;
  height: 100px;
}
.title_image{
  height: 100%;
  width: 100%;
  position: absolute;
}
.userinfo-avatar {
  width: 48px;
  height: 48px;
  margin-left: 30px;
}

.userinfo-nickname {
  position: absolute;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}

.nickname_user{
  margin-left: 20rpx;
  color: #fff;
}
.my-group-margin{
  margin-top: 10px;
}

.copyright{
  color: #8c8c8c;
  text-align: center;
  margin-top: 20px;
  font-size: 14px;
}
.mn{
  width: 100%;
  height: 100rpx;
  background-color: white;
  margin-top: 20rpx;
  padding-left: 70rpx;
  line-height: 100rpx;
  font-size: 35rpx;
}
.mn switch{
  position: absolute;
  right: 20rpx;

}
.sys{
  border-top: 1rpx solid gray;
  height: 70rpx;
  width: 100%;
  display: flex;
align-items: center;
padding-left: 35rpx;
font-size: 34rpx;
background-color: white;
}
.sys image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
